{
  "name": "tapconvey",
  "version": "0.1.0",
  "description": "Reads TAP-formatted data from STDIN to display test results in a web application like goconvey",
  "main": "app/index.js",
  "typings": "app/index.d.js",
  "scripts": {
    "clean:ts": "find `pwd`/src -type f -name '*.ts' ! -name '*.d.ts' | sed 's/\\.ts$//' | xargs -I file find file.map file.js file.d.ts -exec rm {} +",
    "dev:www": "tap test/**/*.js | ts-node www/_dev_server.ts",
    "build:www": "webpack --config www/webpack.config.js -v --display-error-details",
    "test:app": "mocha --compilers ts:ts-node/register --recursive 'src/app/**/*.test.ts' 'src/lib/**/*.test.ts'",
    "test:ui": "mocha --require ignore-styles --require ./www/_require_jsdom.ts --compilers ts:ts-node/register --recursive 'www/**/*.test.ts?(x)'",
    "test:all": "yarn run test:src && yarn run test:www",
    "test": "yarn run cover && nyc check-coverage --statements 93 --lines 90 --functions 90 --branches 80",
    "cover": "nyc yarn run test:all",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "watch": "nodemon -e ts,tsx --exec \"yarn run $1\""
  },
  "keywords": [
    "tap",
    "goconvey",
    "runner",
    "test",
    "tape"
  ],
  "author": "gordon@gordonburgett.net",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/debug": "^0.0.30",
    "@types/enzyme": "^3.1.6",
    "@types/express": "^4.0.34",
    "@types/js-yaml": "^3.10.1",
    "@types/mocha": "^2.2.33",
    "@types/node": "^8.5.2",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/sinon": "^1.16.34",
    "@types/webpack": "^2.0.0",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "coveralls": "^2.11.15",
    "css-loader": "^0.26.1",
    "enzyme": "^2.6.0",
    "gulp": "^3.9.1",
    "gulp-debug": "^3.1.0",
    "gulp-typescript": "^3.2.3",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "ignore-styles": "^5.0.1",
    "istanbul": "^0.4.5",
    "js-yaml": "^3.7.0",
    "jsdom": "^9.8.3",
    "json-loader": "^0.5.4",
    "merge2": "^1.2.0",
    "mobx": "^2.7.0",
    "mobx-react": "^4.3.5",
    "mobx-react-devtools": "^4.2.10",
    "mocha": "^3.2.0",
    "mocha-jsdom": "^1.1.0",
    "mocha-tap-reporter": "^0.1.3",
    "node-sass": "^4.1.1",
    "nyc": "^10.0.0",
    "react": "^15",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15",
    "react-hot-loader": "next",
    "sass-loader": "^4.1.1",
    "sinon": "^1.17.7",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "tap": "^8.0.1",
    "tape": "^4.6.3",
    "ts-node": "^4.1.0",
    "typescript": "^2.6.2",
    "webpack": "^2",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "nodemon": "^1.11.0",
    "stream": "^0.0.2",
    "tap-parser": "^3.0.4"
  }
}
